<h2><%= t('devise.shared.sign_up') %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <div class="row">
    <div class="span4 offset4">
      <%= f.label :name %>
    </div>
  </div>
  <div class="row">
    <div class="span4 offset4">
      <%= f.text_field :name, :autofocus => true %>
    </div>
  </div>
  <div class="row">
    <div class="span4 offset4">
      <%= f.label :email %>
    </div>
  </div>
  <div class="row">
    <div class="span4 offset4">
      <%= f.email_field :email, :autofocus => true %>
    </div>
  </div>
  <div class="row">
    <div class="span4 offset4">
      <%= f.label :password %>
    </div>
  </div>
  <div class="row">
    <div class="span4 offset4">
      <%= f.password_field :password %>
    </div>
  </div>
  <div class="row">
    <div class="span4 offset4">
      <%= f.label :password_confirmation %>
    </div>
  </div>
  <div class="row">
    <div class="span4 offset4">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <div class="row">
    <div class="span4 offset4">
      <%= f.submit t('devise.shared.sign_up'), class: 'btn btn-success' %>
    </div>
  </div>

<% end %>

<%= render "devise/shared/links" %>



