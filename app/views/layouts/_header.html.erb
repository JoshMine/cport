<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to t('.project'), root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to t('.main'), root_path %></li>
          <li><%= link_to t('.help'),  help_path %></li>
          <% if user_signed_in? %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
               <i class="icon-user"></i> <%= current_user.name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t('.profile'), current_user %></li>
                <li><%= link_to t('.loans'), loans_path %></li>
                <li><%= link_to t('.incomes'), incomes_path %></li>
                <li><%= link_to t('.outcomes'), outcomes_path %></li>
                <li><%= link_to t('.wishes'), wishes_path %></li>
                <li><%= link_to t('.settings'), edit_user_path(current_user) %></li>
                <% if !current_user.portfolio %>
                  <li class="divider"></li>
                  <li><%= link_to t('.exit'), signout_path %></li>
                <% else %>
                  <li class="divider"></li>
                  <li>
                    <%= link_to t('.portfolio'), portfolio_path%>
                  </li>
                  <li class="divider"></li>
                  <li><%= link_to t('.exit'), signout_path %></li>
                <% end %>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t('.sign_in'), signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
