= div_for(outcome, class: 'row') do
  .span3= outcome.date_out
  .span2= outcome.outcome_type
  .span2= outcome.amount
  .span1= outcome.currency.name
  .span2= outcome.required
  .span2.btn-group
    = link_to t('global.edit'), edit_outcome_path(outcome), class: 'btn btn-mini'
    = link_to t('global.destroy'), outcome, class: 'btn btn-mini', :method => :delete, :data => { :confirm => t('global.are_you_sure') }
