<div class="row">
    <div class="span8">
       <h3>Документы</h3>
    </div>


<% if @participant.passports.empty? %>
  <div class="span8">
    <h4>Паспорт гражданина РФ</h4>
    <%= link_to "Добавить", new_passport_path, class: "btn btn-small btn-success" %>
    <hr>
  </div>
<% else %>
  <%= render 'participants/documents/passports' %>
<% end %>

<div class="span8">
  
</div>

<% if @participant.drive_licenses.empty? %>
  <div class="span8">
    <h4>Водительское удостоверение</h4>
    <%= link_to "Добавить", new_drive_license_path, class: "btn btn-small btn-success" %>
    <hr>
  </div>
<% else %>
  <%= render 'participants/documents/drive_licenses' %>
<% end %>

  
<div class="span8">
  
</div>

<% if !@participant.pension_certificate %>
  <div class="span8">
    <h4>Пенсионное свидетельство</h4>
    <%= link_to "Добавить", new_pension_certificate_path, class: "btn btn-small btn-success" %>
    <hr>
  </div>
<% else %>
  <%= render 'participants/documents/pension_certificate' %>
<% end %>
  

<% if !@participant.tin_certificate %>
  <div class="span8">
    <h4>Cвидетельство ИНН</h4>
    <%= link_to "Добавить", new_tin_certificate_path, class: "btn btn-small btn-success center" %>
    <hr>
  </div>
<% else %>
  <%= render 'participants/documents/tin_certificate' %>
<% end %>
  

<% if @participant.oversea_passports.empty? %>
  <div class="span8">
    <h4>Заграничный паспорт</h4>
    <%= link_to "Добавить", new_oversea_passport_path, class: "btn btn-small btn-success" %>
    <hr>
  </div>
<% else %>
  <%= render 'participants/documents/oversea_passports' %>
<% end %>

</div>