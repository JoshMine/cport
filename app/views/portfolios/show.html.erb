<h1>Портфолио <small> Активно: <%= @portfolio.active %>  </small> </h1>

<h2>Участники</h2>

<div class="row">
  
  <div class="span10 offset1">
    
    <%= link_to "Добавить участника", portfolio_addparticipant_path, class: "btn btn-large btn-primary pull-right" %>
    
  </div>

  <% @participants.each do |p| %>

    <div class="span10 offset1">
      
      <hr>

      <h3> <%= p.last_name %> <%= p.first_name %> <%= p.middle_name %> </h3> <%= link_to 'Подробнее', participant_path(p) %>
    
    </div>
    
    <div class="span2 offset1">
      <h4>Фото</h4>
      <center>
      <%= image_tag "http://placehold.it/100x100", :class => "img-rounded" %>
      </center>
    </div>
  
    <div class="span4">

      <h4>Контакты</h4>
      <p>
        <strong>моб. тел: </strong> +7 <%= p.m_phone %>
      <br />
        <strong>дом. тел: </strong> +7 <%= p.h_phone %>
      <br />
        <strong>факт. адрес: </strong> <%= p.f_address %>
      </p>

    </div>
  
    <div class="span2">
      <H4>РЕЙТИНГ</H4>
      <p class="rating">775</p>
    </div>
  
    <div class="span2">
      <H4>ИНДЕКС</H4>
      <p class="index">25</p>
    </div>



  <% end %>

    

  
</div>