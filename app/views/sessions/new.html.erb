<h1>Вход в систему</h1>


<div class="row">
  <div class="span4 offset4">
    <p>Введите ваши данные!</p>
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password , "Пароль"%>
      <%= f.password_field :password %>

      <%= f.submit "Войти", class: "btn btn-large btn-success" %>
    <% end %>

    <p>Не зарегистрированы? <%= link_to "Регистрация!", signup_path %></p>
  </div>
</div>
