<h1>Настройки</h1>

<div class="row">
  <div class="span6 offset1">
    <%= form_for(@user) do |f| %>
    
      <%= render 'shared/error_messages', object: f.object %>
    
      <%= render 'shared/user_form', f: f %>
    
     <%= f.submit "Изменить", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>


